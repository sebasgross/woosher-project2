<nav id="navbartwo">
    {{#if loggedUser}}
        <span>
        <a href="/"> <img src="/images/Woosh.png" alt="woosh-logo" width="140" height="60"> </a>
    </span>
        <span class="subnavtwo">
                <a href="/logout">LOGOUT</a>
            </span>
    {{/if}}
</nav>

<h2 class="dashboardTitle">DASHBOARD</h2>

<section class="dashboard-container">
    <div class="user-div">
        <img src="{{user.photoURL}}" alt="{{user.email}}" id="profile-pic">
        <h3>
            {{user.name}}
            {{user.lastName}}
        </h3>
        <h4>Your email</h4>
        <p>{{user.email}}</p>
        <h4> Address</h4>
        <p>{{user.location.address}}</p>
        <button><a href="/edit/{{user._id}}"> Edit Info</a></button>
    </div>

    <div class="services-div">

        {{#ifCond user.role "USUARIO"}}

               <a id="get-woosher"href="service/new" > <b>Get your Woosher now!</b></a>
            <p>
                <b>You want to earn money with Woosh?</b>
               <button class="woosher-button"><a href="/become-woosher">Become a Woosher</a></button>
    
            </p>
            <hr>
        {{else}}
            <div class="active-orders">
                    <p>See all Woosher requests </p>
                    <button><a href="/service/status">Requests</a></button>
            </div>
        {{/ifCond}}

        {{#each services as |service|}}

                {{#if service.active}}
                    {{#if service.addressTo.coordinates}}
                        {{#if service.clothesPicked}}
                        {{else}}
                            <p>Dont wait to long {{service.username}} </p><br>
                            <p><b>{{service.woosher.name}}</b> is taking care of your order</p><br>
                            <p><b>Order being delivered to:</b> {{service.user.location.address}} </p>
                        {{/if}}
                    {{/if}}
                {{/if}}

                {{#if service.addressTo.coordinates}}
                {{else}}
                    <p>Your order is still being processed, stay calm {{user.name}}</p>
                {{/if}}

                {{#if service.clothesPicked }}
                    {{#if service.active}}
                        <p id="order-delivered">Woosher is Outside, have ready your dirty laundry bag</p>
                    {{/if}}
                {{/if}}

                {{#if service.clothesPicked }}
                    {{#if service.active}}
                    {{else}}
                        <p style="color:rgb(244, 143, 48); text-decoration: underline">Your order  has been delivered</p>
                    {{/if}}
                {{/if}}
        {{/each}}
                
        {{#ifCond user.role "WOOSHER"}}
            <div class="active-orders">
                <p>Check all <b>your</b> active orders.</p>
                <button><a href="/service/list">Current Orders</a></button>
            </div>
        {{/ifCond}}
        </div>
</section>
