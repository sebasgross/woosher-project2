<section class="dashboardPage">
<h2>dash<b>b</b>oard</h2>


<div class="user-div">
    {{#ifCond user.role "USUARIO"}}
        <div id="pide-woosher">
            <a href="/service/new" tpye="submit">Get your Woosher now!</a>
        </div>
    {{/ifCond}}
    <img src="{{photoURL}}" alt="{{email}}" height="100" width="90">

    <h3>
    {{user.name}} 
    {{lastName}}
    </h3>
    <h5>Your email: {{user.email}}</h5>
    <p> Address: {{user.location.address}}</p>
    <br>
    
    {{#ifCond user.role "USUARIO"}}
    <a href="/become-woosher" type="button">Hazte Woosher</a>
    {{else}}
    <p>
        Check available request:
        <a href="/service/status">Click here</a>
    </p>
    {{/ifCond}}
</div>

<div class="services-div">
    {{#each services as |service|}}
    <section class="order-card">

    {{#if service.active}}    
    {{#if service.addressTo.coordinates}}
    {{#if service.clothesPicked}}
    {{else}}
    <h5>Dont wait to long {{service.username}} </h5><br>

    <p><b>{{service.woosher.name}}</b> is taking care of your order</p><br>

    <p>Order being delivered to:<b> {{service.user.location.address}}</b> </p>
    {{/if}}
    {{/if}}
    {{/if}}
    
    {{#if service.addressTo.coordinates}}
    {{else}}
    <p>Your order is still being processed</p>
    {{/if}}


    {{#if service.clothesPicked }}
    {{#if service.active}}
  
    <p id="order-delivered">Woosher is Outside, have ready your dirty laundry bag</p>
    
    {{/if}}
    {{/if}}
    {{#if service.clothesPicked }}
    {{#if service.active}}
    {{else}}
        <p>Your order has been delivered</p>
    {{/if}}
    {{/if}}

    </section>
    {{/each}}

   

    {{#ifCond user.role "WOOSHER"}}
    <a href="/service/list" type="button">Check current orders</a>
    {{/ifCond}}
    


</div>

</section>
